<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AI_Fashion" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/welcome_background</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="titleFont">
        <item name="android:textSize">48sp
        </item>
        <item name="android:textColor">#000000
        </item>
    </style>
    <style name="homepage_botton_font">
        <item name="android:textSize">14px
        </item>
        <item name="android:textColor">#F8F5F5
        </item>
    </style>
    <style name=
        "new_Account">
        <item name=
            "android:textSize">
            22px
        </item>
        <item name=
            "android:textColor">
            #000000
        </item>
    </style>
    <!-- Dialog 样式-->
    <style name="dialogStyle" parent="@android:style/Theme.Holo.Dialog">
        <!-- 是否有边框 -->
        <item name="android:windowFrame">@null</item>
        <!--是否在悬浮Activity之上  -->
        <item name="android:windowIsFloating">true</item>
        <!-- 标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--阴影  -->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <!--背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <!--弹出框 动画-->
    <style name="dialog_share" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_pop_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="temperature_font">
        <item name=
            "android:textSize">
            64px
        </item>
        <item name=
            "android:letterSpacing">
            0.0037
        </item>
        <item name=
            "android:textColor">
            #FFFFFF
        </item>
    </style>
    <style name="weather_font">
        <item name=
            "android:textSize">
            13px
        </item>
        <item name=
            "android:letterSpacing">
            0.0037
        </item>
        <item name=
            "android:textColor">
            #FFFFFF
        </item>
    </style>
    <style name=
        "location_font">
        <item name=
            "android:textSize">
            16px
        </item>
    </style>

    /* strings.xml */

</resources>